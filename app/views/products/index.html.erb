<div class="product-index">
  <h1>List of Products</h1>

  <div class="table-responsive">
    <table class="product-table">
      <thead>
        <tr>
          <th>Name</th>
          <th>Description</th>
          <th>Image</th>
          <th>Colour</th>
          <th>Price</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
          <%= render @products %>
      </tbody>
    </table>
  </div>

  <br>

  <%= link_to 'New Product', new_product_path %>
</div>